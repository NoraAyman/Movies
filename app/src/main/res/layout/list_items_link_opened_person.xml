<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_item_person_link"
    android:background="#fff8ce"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingBottom="7dp"
        >

        <ImageView
            android:id="@+id/person_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"

            />
        <TextView
            android:id="@+id/person_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:layout_marginTop="5dp"


            />
        <TextView
            android:id="@+id/person_deathDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:layout_marginTop="5dp"


            />
        <TextView
            android:id="@+id/person_placeOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            />

        <TextView
            android:id="@+id/person_biography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"

            />
    </LinearLayout>
</ScrollView>
